<%# Edit view for editing existing songs %>

<div class="col-md-6 col-md-offset-3">

  <div class="edit-song-form">

    <h1><%= t('songs.edit.edit_song') %></h1>

    <%= simple_form_for @song, :html => { :multipart => true } do |f| %>
      <%= f.select :genre_id, @genres %>
      <%= f.input :title %>
      <%= f.input :artist %>
      <%= f.input :album %>
      <%= f.input :year %>
      <%= f.button :submit, :class => "btn-custom2" %>
    <% end %>
  </div>

</div>
