!!!
%html
  %body
    - # Contact page, where users can contact site owner
    %meta{:charset => "UTF-8"}/
    .col-md-6.col-md-offset-3
      .new-song-form
        %h1
          = t('nav_bar.contact_us')
        = form_tag request_contact_path, :remote => true, :id => 'contact_form', method: 'post' do
          = label_tag :name, t('songs.contact.name'), :id => 'name_label'
          = text_field_tag :name, '', title: t('songs.contact.enter_name'), size: 50
          = label_tag :email, t('songs.contact.email'), :id => 'email_label'
          - if current_user
            = email_field_tag :email, current_user.email, title: t('songs.contact.enter_email')
          - else
            = email_field_tag :email, '', title: t('songs.contact.enter_email')
          = label_tag :telephone, t('songs.contact.telephone'), :id => 'telephone_label'
          = telephone_field_tag :telephone, '', title: t('songs.contact.enter_telephone')
          = label_tag :message, t('songs.contact.message'), :id => 'message_label'
          = text_field_tag :message, '', title: t('songs.contact.enter_message'), size: 65
          = submit_tag t('songs.contact.submit'), class: 'btn-custom2', :id => 'submit'
