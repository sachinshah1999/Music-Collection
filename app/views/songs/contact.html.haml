-# Contact page, where users can contact site owner
%h1= t('nav_bar.contact_us')

= form_tag request_contact_path, method: 'post' do
  = label_tag :name, t('songs.contact.name')
  = text_field_tag :name, '', title: t('songs.contact.enter_name'), size: 50

  = label_tag :email, t('songs.contact.email')
  = email_field_tag :email, '', title: t('songs.contact.enter_email')

  = label_tag :telephone, t('songs.contact.telephone')
  = telephone_field_tag :telephone, '', title: t('songs.contact.enter_telephone')

  = label_tag :message, t('songs.contact.message')
  = text_field_tag :message, '', title: t('songs.contact.enter_message'), size: 100

  = submit_tag t('songs.contact.submit')
